@using WebApplication1.Areas.BookingManagement.Models;
@model CarRental

@{
    ViewData["Title"] = "Car Rental Details";
    Layout = "_Layout";
}

<h1>Car Rental Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Model:</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Rental Agency:</dt>
        <dd class="col-sm-10">@Model.RentalAgency</dd>

        <dt class="col-sm-2">Price Per Day:</dt>
        <dd class="col-sm-10">@Model.PricePerDay</dd>

        <dt class="col-sm-2">Is Available:</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-controller="CarRentals" asp-action="Index">Back to Car Rentals</a>
</div>