@using Microsoft.AspNetCore.Identity;
@using WebApplication1.Areas.BookingManagement.Models;
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInMananger

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid" style="background-color:bisque">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-globe"> GBC_Travel-Group-111</i>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="btn btn-light me-2" asp-area=" " asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"> Home</i></a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-light me-2" asp-area="BookingManagement" asp-controller="Flight" asp-action="Index"><i class="fa-solid fa-plane"> Flights</i></a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-light me-2" asp-area="BookingManagement" asp-controller="Hotels" asp-action="Index"><i class="fa-solid fa-hotel"> Hotels</i></a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-light me-2" asp-area="BookingManagement" asp-controller="CarRentals" asp-action="Index"><i class="fa-solid fa-car"> Car Rental</i></a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-light me-2" asp-area="BookingManagement" asp-controller="Bookings" asp-action="Index"><i class="fa-solid fa-circle-check"> Booking</i></a>
                </li>

                @if (SignInMananger.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                    </li>
                    <li class="nav-item">
                       
                        <a class="nav-link" id="logout" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>


                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                }

            


            </ul>
        </div>

    </div>
</nav>